= wrap_layout :layout do
  %article
    .row
      .columns
        .episode
          %header.episode-header
            .episode-title
              %h2
                Episode
                = data.page.episode
                \-
                = data.page.title
          .episode-content
            %audio{:controls => "", :src => data.page.download}
              %p
                Your browser does not support the
                %code audio
                element
            %p
              = link_to 'Download', data.page.download
              &bullet;
              %time= current_article.date.strftime('%B %e, %Y')
            .episode-meta
              %p= current_article.data.description

            = yield

          .episode-aside
            %aside
              %h4.subheader Recent episodes
              %ul.recent-episodes
                - blog.articles[0...5].each do |article|
                  %li.recent
                    = link_to article.url do
                      Episode
                      = article.data.episode
                      \-
                      = article.title
                    on
                    = article.date.strftime('%B %e, %Y')
